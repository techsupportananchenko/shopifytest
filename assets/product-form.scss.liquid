.product-form__error-message-wrapper {
  display: flex;
  flex-basis: 100%;
  padding: .5rem 0;
  margin: 0 3px 20px;
  font-size: 12px;

  svg {
    min-width: 20px;
  }

  span {
    margin-left: 8px;
  }
}
.hidden {
  display: none;
}
.section-variant {
  position: relative;
  width: 100%;
  height: 42px;
}
select {
  padding-top: 10px;
  padding-left: 18px;
  padding-bottom: 10px;
}
select {
  appearance: none;
  background-position: right center;
  background-image: url(//cdn.shopify.com/s/files/1/0554/8313/8215/t/1/assets/ico-select.svg?v=2900367270910467858);
  background-repeat: no-repeat;
  background-position: right 10px center;
  line-height: 1.2;
  padding-right: 28px;
  text-indent: .01px;
  text-overflow: '';
  cursor: pointer;
  padding-top: 8px;
  padding-left: 15px;
  padding-bottom: 8px;
}
.variant-image {
  display: block;
  opacity: 1;
  transition: opacity .4s cubic-bezier(.25, .46, .45, .94);

  &.hidden {
    display: none;
    opacity: 0;
  }
}